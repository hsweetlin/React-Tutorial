{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "CommonJS", 
    "lib": ["DOM", "DOM.Iterable", "ES2021"],                              
    "jsx": "react",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,    
    "newLine": "lf",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                               
  },
  "include": ["./src", "src/index.ts"],
  "exclude": ["node_modules"]
}
